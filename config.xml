<?xml version='1.0' encoding='utf-8'?>
<widget id="com.thdarkleaves.panda" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>PANDA Pain Diary</name>
    <description>
        A pain diary.
    </description>
    <author email="thedar.kleaves@zohomail.com.au" href="http://appreciatethesauce.blogspot.com">
        Thedar Kleaves
    </author>
    <preference name="phonegap-version" value="cli-9.0.0" />
    <content src="index.html" />
    <resource-file src="google-services.json" target="/app/google-services.json" />
    <platform name="ios">
        <resource-file src="GoogleService-Info.plist" />
    </platform>
    <plugin name="cordova-plugin-whitelist" spec="1" />
    <plugin name="cordova-plugin-firebase" spec="2.0.0" />
    
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
</widget>

